#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void)
{
  char *line_buf = NULL;
  size_t line_buf_size = 0;
  int line_count = 0;
  long line_size;


  line_size = getline(&line_buf, &line_buf_size, stdin);

  while (line_size >= 0)
  {
    line_count++;

    /* implementation here, the string read by stdin will store in "line_buf"
    */


    line_size = getline(&line_buf, &line_buf_size, stdin);
  }

  free(line_buf);
  line_buf = NULL;

  return EXIT_SUCCESS;
}
